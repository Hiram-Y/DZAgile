<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <LinearLayout
        android:id="@+id/base_dialog_top_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="@android:color/black"
        android:orientation="horizontal"
        android:paddingBottom="7dip"
        android:paddingTop="7dip" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/base_dialog_center_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/base_dialog_bottom_layout"
        android:layout_below="@id/base_dialog_top_layout"
        android:orientation="vertical"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/base_dialog_bottom_layout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="7dip"
        android:layout_marginTop="5dip"
        android:gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="10dip"
        android:paddingRight="10dip" >
    </LinearLayout>

</RelativeLayout>